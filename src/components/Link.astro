---
import { cn } from '@lib/utils'

type Props = {
  href: string
  class?: string
  underline?: boolean
  'data-heading'?: string
  [key: string]: any
}

const { href, external, class: className, underline, ...rest } = Astro.props
---

<a
  href={href}
  class={cn(
    'inline-block transition-colors duration-300 ease-in-out',
    underline && 'underline underline-offset-[3px]',
    className,
  )}
  {...rest}
>
  <slot />
</a>
